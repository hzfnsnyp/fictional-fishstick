+// Router guard to redirect to maintenance page when maintenance mode is enabled
+
+/**
+ * Check if maintenance mode is enabled
+ * @returns {boolean}
+ */
+export function isMaintenanceMode() {
+  // Option 1: Check environment variable
+  return import.meta.env.VITE_MAINTENANCE_MODE === 'true';
+
+  // Option 2: Check localStorage (can be toggled without rebuild)
+  // return localStorage.getItem('maintenanceMode') === 'true';
+
+  // Option 3: Check from API/Settings (dynamic control from CMS)
+  // Will need to fetch settings first, see example below
+}
+
+/**
+ * Get allowed IPs during maintenance (optional)
+ * Allows specific IPs to bypass maintenance mode (e.g., for testing)
+ */
+export function getAllowedIPs() {
+  const allowedIPs = import.meta.env.VITE_MAINTENANCE_ALLOWED_IPS || '';
+  return allowedIPs.split(',').map(ip => ip.trim()).filter(Boolean);
+}
+
+/**
+ * Check if current user should bypass maintenance
+ * @returns {boolean}
+ */
+export function shouldBypassMaintenance() {
+  // Option 1: Check for bypass token in localStorage
+  const bypassToken = localStorage.getItem('maintenanceBypassToken');
+  const validToken = import.meta.env.VITE_MAINTENANCE_BYPASS_TOKEN;
+
+  if (bypassToken && validToken && bypassToken === validToken) {
+    return true;
+  }
+
+  // Option 2: Check query parameter (for one-time bypass)
+  const urlParams = new URLSearchParams(window.location.search);
+  const queryToken = urlParams.get('bypass');
+
+  if (queryToken && validToken && queryToken === validToken) {
+    // Store token for this session
+    localStorage.setItem('maintenanceBypassToken', queryToken);
+    return true;
+  }
+
+  return false;
+}
+
+/**
+ * Navigation guard for maintenance mode
+ * Add this to your router
+ */
+export function maintenanceGuard(to, from, next) {
+  // Skip check if going to maintenance page
+  if (to.name === 'maintenance') {
+    next();
+    return;
+  }
+
+  // Check if maintenance mode is active
+  if (isMaintenanceMode() && !shouldBypassMaintenance()) {
+    // Redirect to maintenance page
+    next({ name: 'maintenance' });
+  } else {
+    // Allow navigation
+    next();
+  }
+}
+
+export default maintenanceGuard;
