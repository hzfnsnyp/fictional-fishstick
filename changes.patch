+// FILE: src/router/maintenanceGuard.secure.js
+// SECURE version of maintenance guard with backend verification
+
+const MAINTENANCE_API = import.meta.env.VITE_PAYLOAD_API_URL || 'http://localhost:3000/api';
+
+/**
+ * Check maintenance status from backend
+ * This is secure because logic is on server
+ */
+async function checkMaintenanceStatus() {
+  try {
+    const response = await fetch(`${MAINTENANCE_API}/maintenance/status`, {
+      credentials: 'include', // Include cookies for session
+    });
+
+    if (!response.ok) {
+      throw new Error('Failed to check maintenance status');
+    }
+
+    const data = await response.json();
+    return {
+      enabled: data.maintenanceMode,
+      userAllowed: data.userAllowed, // Backend checks IP, JWT, session
+    };
+  } catch (error) {
+    console.error('Maintenance status check failed:', error);
+    // Default to allowing access if check fails
+    return {
+      enabled: false,
+      userAllowed: true,
+    };
+  }
+}
+
+/**
+ * Verify bypass token with backend
+ * Token validation happens on server, not exposed to client
+ */
+async function verifyBypassToken(token) {
+  try {
+    const response = await fetch(`${MAINTENANCE_API}/maintenance/verify`, {
+      method: 'POST',
+      headers: {
+        'Content-Type': 'application/json',
+      },
+      credentials: 'include',
+      body: JSON.stringify({ token }),
+    });
+
+    if (!response.ok) {
+      return false;
+    }
+
+    const data = await response.json();
+    return data.valid;
+  } catch (error) {
+    console.error('Token verification failed:', error);
+    return false;
+  }
+}
+
+/**
+ * Secure navigation guard
+ */
+export async function maintenanceGuardSecure(to, from, next) {
+  // Skip check if going to maintenance page
+  if (to.name === 'maintenance') {
+    next();
+    return;
+  }
+
+  // Check for bypass token in query
+  const token = to.query.bypass;
+  if (token) {
+    const isValid = await verifyBypassToken(token);
+    if (isValid) {
+      // Store in sessionStorage (not localStorage for security)
+      sessionStorage.setItem('maintenanceBypass', 'verified');
+      next();
+      return;
+    }
+  }
+
+  // Check if already verified in this session
+  const hasSessionBypass = sessionStorage.getItem('maintenanceBypass') === 'verified';
+
+  // Check maintenance status from backend
+  const status = await checkMaintenanceStatus();
+
+  if (status.enabled && !status.userAllowed && !hasSessionBypass) {
+    next({ name: 'maintenance' });
+  } else {
+    next();
+  }
+}
+
+export default maintenanceGuardSecure;
