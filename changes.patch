+// FILE: cms/src/endpoints/maintenance.example.ts
+// EXAMPLE: Secure maintenance mode endpoints for Payload CMS
+// Add to cms/src/payload.config.ts
+
+import { Endpoint } from 'payload/config';
+
+/**
+ * Check maintenance status
+ * Returns whether maintenance is active and if user is allowed access
+ */
+export const maintenanceStatus: Endpoint = {
+  path: '/maintenance/status',
+  method: 'get',
+  handler: async (req, res) => {
+    try {
+      // Get settings from Payload
+      const settings = await req.payload.findGlobal({
+        slug: 'settings',
+      });
+
+      const maintenanceMode = settings?.maintenanceMode?.enabled || false;
+
+      // Check if user should be allowed
+      let userAllowed = false;
+
+      // Option 1: Check if user is authenticated (logged into CMS)
+      if (req.user) {
+        userAllowed = true;
+      }
+
+      // Option 2: Check IP allowlist
+      const clientIP = req.headers['x-forwarded-for'] || req.socket.remoteAddress;
+      const allowedIPs = process.env.MAINTENANCE_ALLOWED_IPS?.split(',') || [];
+
+      if (allowedIPs.includes(clientIP)) {
+        userAllowed = true;
+      }
+
+      // Option 3: Check session token
+      const sessionToken = req.session?.maintenanceBypass;
+      if (sessionToken === process.env.MAINTENANCE_SECRET) {
+        userAllowed = true;
+      }
+
+      res.json({
+        maintenanceMode,
+        userAllowed,
+        message: maintenanceMode
+          ? settings?.maintenanceMode?.message || 'Site under maintenance'
+          : null,
+        estimatedEnd: maintenanceMode
+          ? settings?.maintenanceMode?.estimatedEnd
+          : null,
+      });
+    } catch (error) {
+      console.error('Maintenance status error:', error);
+      res.status(500).json({ error: 'Failed to check maintenance status' });
+    }
+  },
+};
+
+/**
+ * Verify bypass token
+ * Validates token server-side without exposing it to client
+ */
+export const maintenanceVerify: Endpoint = {
+  path: '/maintenance/verify',
+  method: 'post',
+  handler: async (req, res) => {
+    try {
+      const { token } = req.body;
+
+      // Token is stored securely in environment, never sent to client
+      const validToken = process.env.MAINTENANCE_BYPASS_TOKEN;
+
+      // Optional: Use time-limited tokens
+      // const validToken = generateTimeBasedToken(process.env.MAINTENANCE_SECRET);
+
+      if (!token || !validToken) {
+        return res.json({ valid: false });
+      }
+
+      // Constant-time comparison to prevent timing attacks
+      const valid = timingSafeEqual(
+        Buffer.from(token),
+        Buffer.from(validToken)
+      );
+
+      if (valid) {
+        // Set session cookie
+        req.session.maintenanceBypass = process.env.MAINTENANCE_SECRET;
+      }
+
+      res.json({ valid });
+    } catch (error) {
+      console.error('Token verification error:', error);
+      res.status(500).json({ error: 'Verification failed' });
+    }
+  },
+};
+
+/**
+ * Helper: Timing-safe string comparison
+ */
+function timingSafeEqual(a: Buffer, b: Buffer): boolean {
+  if (a.length !== b.length) {
+    return false;
+  }
+
+  let result = 0;
+  for (let i = 0; i < a.length; i++) {
+    result |= a[i] ^ b[i];
+  }
+
+  return result === 0;
+}
+
+/**
+ * Optional: Generate time-based tokens (expire after X hours)
+ */
+function generateTimeBasedToken(secret: string): string {
+  const crypto = require('crypto');
+  const hour = Math.floor(Date.now() / (1000 * 60 * 60)); // Current hour
+  return crypto
+    .createHmac('sha256', secret)
+    .update(hour.toString())
+    .digest('hex')
+    .substring(0, 32);
+}
